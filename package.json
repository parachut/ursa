{
  "name": "ursa",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/ursa/test/jest-e2e.json"
  },
  "dependencies": {
    "@easypost/api": "^3.8.0",
    "@elastic/elasticsearch": "^7.5.1",
    "@nestjs/common": "^6.10.14",
    "@nestjs/config": "^0.1.0",
    "@nestjs/core": "^6.10.14",
    "@nestjs/graphql": "^6.5.4",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/passport": "^6.1.1",
    "@nestjs/platform-express": "^6.11.5",
    "@nestjs/platform-fastify": "^6.11.5",
    "@sindresorhus/slugify": "^0.10.0",
    "@types/express-xml-bodyparser": "^0.3.1",
    "another-name-parser": "^0.0.8",
    "apollo-server-express": "^2.9.16",
    "apollo-server-fastify": "^2.9.16",
    "authy-client": "^1.1.4",
    "await-to-js": "^2.1.1",
    "awesome-phonenumber": "^2.26.0",
    "clearbit": "^1.3.4",
    "date-fns": "^2.9.0",
    "dotenv": "^8.2.0",
    "dwolla-v2": "^3.1.0",
    "express-xml-bodyparser": "^0.3.0",
    "graphql": "^14.6.0",
    "lodash": "^4.17.15",
    "numeral": "^2.0.6",
    "p-map": "^3.0.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^7.18.1",
    "plaid": "^4.5.0",
    "postmark": "^2.3.5",
    "recurly": "^3.3.1",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^2.1.3",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4",
    "sequelize": "^5.21.3",
    "sequelize-typescript": "^1.1.0",
    "type-graphql": "^0.17.6",
    "validatorjs": "^3.18.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.13.2",
    "@nestjs/schematics": "^6.8.1",
    "@nestjs/testing": "^6.10.14",
    "@types/express": "^4.17.2",
    "@types/jest": "25.1.1",
    "@types/node": "^13.1.6",
    "@types/request-ip": "^0.0.35",
    "@types/sequelize": "4.28.1",
    "@types/supertest": "^2.0.8",
    "@types/validator": "10.11.3",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "25.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/database/(.*)": "<rootDir>/libs/database/src/$1",
      "@app/database": "<rootDir>/libs/database/src",
      "@app/calculator/(.*)": "<rootDir>/libs/calculator/src/$1",
      "@app/calculator": "<rootDir>/libs/calculator/src",
      "@app/auth/(.*)": "<rootDir>/libs/auth/src/$1",
      "@app/auth": "<rootDir>/libs/auth/src"
    }
  }
}
