{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/database": [
        "libs/database/src"
      ],
      "@app/database/*": [
        "libs/database/src/*"
      ],
      "@app/calculator": [
        "libs/calculator/src"
      ],
      "@app/calculator/*": [
        "libs/calculator/src/*"
      ],
      "@app/recurly": [
        "libs/recurly/src"
      ],
      "@app/recurly/*": [
        "libs/recurly/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}